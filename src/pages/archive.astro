---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { formatDate, formatDateShort } from '../utils/date.ts';

const allPosts = await getCollection('blog', ({ data }) => !data.draft);
const posts = allPosts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

// Group posts by year
const byYear = posts.reduce((acc, post) => {
  const year = post.data.pubDate.getFullYear().toString();
  if (!acc[year]) acc[year] = [];
  acc[year].push(post);
  return acc;
}, {} as Record<string, typeof posts>);

const years = Object.keys(byYear).sort((a, b) => Number(b) - Number(a));
---

<BaseLayout title="Archive — santoshchandu.com" description="All posts from santoshchandu.com, organized by year.">
  <div class="archive-page">
    <div class="content-container">
      <header class="page-header">
        <div class="section-label">Archive</div>
        <h1>All posts</h1>
        <p class="header-desc">{posts.length} posts total — subscribe via <a href="/feed.xml">RSS</a> to get new ones.</p>
      </header>

      <div class="archive-list">
        {years.map(year => (
          <section class="year-group">
            <h2 class="year-heading">{year}</h2>
            <ul class="post-list">
              {byYear[year].map(post => (
                <li class="post-item">
                  <time datetime={post.data.pubDate.toISOString()} class="post-date">
                    {formatDateShort(post.data.pubDate)}
                  </time>
                  <a href={`/blog/${post.slug}`} class="post-link">
                    {post.data.title}
                  </a>
                  <div class="post-tags">
                    {post.data.tags.slice(0, 2).map(tag => (
                      <span class="tag">{tag}</span>
                    ))}
                  </div>
                </li>
              ))}
            </ul>
          </section>
        ))}
      </div>
    </div>
  </div>
</BaseLayout>

<style>
.archive-page {
  padding: 3.5rem 0 6rem;
}

.section-label {
  font-family: var(--font-mono);
  font-size: 0.7rem;
  letter-spacing: 0.12em;
  text-transform: uppercase;
  color: var(--accent);
  margin-bottom: 0.75rem;
}

.page-header {
  margin-bottom: 3.5rem;
  padding-bottom: 2rem;
  border-bottom: 2px solid var(--ink);
}

.page-header h1 {
  font-size: clamp(2rem, 5vw, 3rem);
  font-weight: 900;
  letter-spacing: -0.025em;
  margin-bottom: 0.6rem;
}

.header-desc {
  color: var(--ink-muted);
  font-style: italic;
  font-size: 0.95rem;
}

.year-group {
  margin-bottom: 3rem;
}

.year-heading {
  font-family: var(--font-mono);
  font-size: 0.8rem;
  letter-spacing: 0.08em;
  color: var(--accent);
  text-transform: uppercase;
  margin-bottom: 1rem;
  padding-bottom: 0.5rem;
  border-bottom: 1px solid var(--border);
}

.post-list {
  list-style: none;
  padding: 0;
}

.post-item {
  display: grid;
  grid-template-columns: 7rem 1fr auto;
  align-items: baseline;
  gap: 1rem;
  padding: 0.9rem 0;
  border-bottom: 1px solid var(--border);
}

.post-date {
  font-family: var(--font-mono);
  font-size: 0.75rem;
  color: var(--ink-faint);
  white-space: nowrap;
  flex-shrink: 0;
}

.post-link {
  font-family: var(--font-display);
  font-size: 1.05rem;
  font-weight: 700;
  color: var(--ink);
  text-decoration: none;
  line-height: 1.3;
  transition: color 0.15s;
}

.post-link:hover { color: var(--accent); }

.post-tags {
  display: flex;
  gap: 0.4rem;
  flex-wrap: wrap;
  justify-content: flex-end;
}

.tag {
  font-family: var(--font-mono);
  font-size: 0.65rem;
  letter-spacing: 0.05em;
  text-transform: uppercase;
  color: var(--ink-faint);
  border: 1px solid var(--border);
  padding: 0.1rem 0.4rem;
  border-radius: 2px;
}

@media (max-width: 600px) {
  .archive-page {
    padding: 2.5rem 0 4rem;
  }

  .page-header {
    margin-bottom: 2.5rem;
    padding-bottom: 1.5rem;
  }

  .year-heading {
    font-size: 0.72rem;
    margin-bottom: 0.75rem;
  }

  .post-item {
    grid-template-columns: 1fr;
    gap: 0.4rem;
    padding: 0.75rem 0;
  }

  .post-link {
    font-size: 0.95rem;
  }

  .post-tags {
    justify-content: flex-start;
    margin-top: 0.2rem;
  }
}

@media (max-width: 480px) {
  .page-header h1 {
    font-size: 1.85rem;
  }
}
</style>
